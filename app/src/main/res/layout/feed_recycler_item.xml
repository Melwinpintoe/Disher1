<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:paddingBottom="45dp"
    tools:ignore="MissingConstraints"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<androidx.cardview.widget.CardView  xmlns:card_view="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_small"
    android:clickable="true"
    card_view:cardUseCompatPadding="true"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/pad_small">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad_small">
        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
           android:scaleType="fitXY"
            android:src="@drawable/event_one"
            android:contentDescription="@string/app_name"
            />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_product_img"
            android:padding="2dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Pasta Fresca Festival : UB City" />
        <TextView
            android:id="@+id/txtcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:padding="2dp"
            android:textAllCaps="true"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp"
            android:text="Toscano, 24, Vittal Mallya Rd, KG Halli, Shanthala Nagar, Ashok Nagar
Bengaluru, Karnataka" />

        <TextView
            android:id="@+id/articledesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtcomment"
            android:padding="1dp"
            android:textSize="14sp"
            android:lines="2"
            android:text="Pasta Fresca Festival : UB City: 19th Feb to 1st March Join us in celebrating everything Pasta: Italy's gift to the world! An exclusive menu, curated by our chefs, that celebrates the freshest..." />
        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted By.."
            android:textSize="8sp"
            android:textColor="@color/colorPrimary"
           android:layout_below="@+id/articledesc"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/pad_small"
            android:src="@drawable/ic_person"
            android:layout_below="@+id/post"
             />
        <TextView
            android:id="@+id/txtParty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@android:color/primary_text_light"
            android:textSize="8sp"
            android:textStyle="bold|italic"
            android:text="Mohan Kumar N"
            android:layout_below="@+id/post"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />
        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="6sp"
            android:textStyle="bold"
            android:text="ehub member"
            android:layout_below="@+id/txtParty"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="20 January 10:00 PM" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

